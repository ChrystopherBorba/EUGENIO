                <img src="~/resources/images/Index/image 5.png" width="250" height="250">
            </div>


            <div id="btn_div">
                <input id="prox" onclick="window.location='Desconto'" type="submit" value="Próximo" class="btn btn-info">
            </div>

        </div>

    </div>


