            padding-top: 50px;
            padding-left: 30%;
        }

    </style>
</head>
<body>

    <div id="tudo">
        <!-- main header -->
        <header>
        </header>
        <!-- home -->
        <div id="tudo">

            @foreach (var Produto in Model)
            {
                <div id="texto">
                    <h1>01 Produto lido</h1><br />
